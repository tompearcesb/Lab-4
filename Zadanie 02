import os
os.system("cls")

from math import *

a = int(input("Enter the first number: "))
b = int(input("Enter the second number: "))
print("Your numbers: ", a, " and ", b)

sum = a+b
subtraction = a-b
multiplication = a*b

if b==0:
    print("You can't divide by zero/")
else:
    division = a/b
print(" Sum ", sum, " Subtraction ", subtraction, " Multiplication ", multiplication, " Division ", division)
